{
  /* This is a specific tsconfig for the Convex functions. */
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "./_generated/out", // Direct output away from source to avoid loop
    "skipLibCheck": true,
    "jsx": "react"
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "_generated"]
}
